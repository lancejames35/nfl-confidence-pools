    <a href="/auth/login" class="btn btn-primary">
        <i class="fas fa-sign-in-alt me-2"></i>Back to Sign In
    </a>
</div>

<div class="text-center mt-4">
    <small class="text-muted">
        <i class="fas fa-shield-alt me-1"></i>
