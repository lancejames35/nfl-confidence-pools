<div class="container text-center py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="error-page">
                <h1 class="display-4 text-danger mb-4">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    Oops! Something went wrong
                </h1>
                
                <div class="alert alert-danger" role="alert">
                    <h5 class="alert-heading">Error <%= error.status || 500 %></h5>
                    <p class="mb-0"><%= error.message || 'An unexpected error occurred' %></p>
                </div>
                
                <% if (environment === 'development' && error.stack) { %>
                    <div class="alert alert-warning text-start">
                        <h6>Stack Trace (Development Only):</h6>
                        <pre class="mb-0"><code><%= error.stack %></code></pre>
                    </div>
                <% } %>
                
                <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center mt-4">
                    <button onclick="history.back()" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Go Back
                    </button>
                    <a href="/" class="btn btn-primary">
                        <i class="fas fa-home me-2"></i>Go Home
                    </a>
                    <a href="/dashboard" class="btn btn-outline-primary">
                        <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.error-page {
    padding: 2rem 0;
}

pre code {
    font-size: 0.875rem;
    max-height: 300px;
    overflow-y: auto;
}
</style>