<!DOCTYPE html>
<html lang="en" data-theme="<%= locals.currentTheme || 'clean_sports' %>">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> | <%= appName %></title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    
    <!-- Custom CSS -->
    <link href="/css/main.css" rel="stylesheet">
    <link href="/css/themes.css" rel="stylesheet">
    
    <%- style %>
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/img/favicon.ico">
    
    <!-- Mobile optimizations -->
    <meta name="theme-color" content="#1a365d">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="default">
    
    <!-- PWA Manifest -->
    <link rel="manifest" href="/manifest.json">
</head>
<body class="<%= locals.bodyClass || '' %>">
    <% 
    // Calculate user initials for reuse throughout the template
    let initials = 'U';
    if (user && user.first_name && user.last_name) {
        initials = user.first_name.charAt(0).toUpperCase() + user.last_name.charAt(0).toUpperCase();
    } else if (user && user.username) {
        initials = user.username.charAt(0).toUpperCase() + (user.username.charAt(1) || '').toUpperCase();
    }
    %>
    <!-- Enhanced Navigation -->
    <% if (locals.isAuthenticated) { %>
        <!-- Desktop Navigation -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary d-none d-lg-block">
            <div class="container">
                <a class="navbar-brand" href="/dashboard">
                    <i class="fas fa-football-ball me-2"></i>
                    NFL Pools
                </a>
                
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link <%= locals.currentUrl === '/dashboard' ? 'active' : '' %>" href="/dashboard">
                                <i class="fas fa-home me-1"></i>Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link <%= locals.currentUrl && locals.currentUrl.startsWith('/picks') ? 'active' : '' %>" href="<%= locals.contextualNavUrls ? locals.contextualNavUrls.picks : '/picks' %>">
                                <i class="fas fa-edit me-1"></i>Make Picks
                                <% if (locals.pendingPicksCount > 0) { %>
                                    <span class="badge bg-danger ms-1"><%= locals.pendingPicksCount %></span>
                                <% } %>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link <%= locals.currentUrl && locals.currentUrl.startsWith('/results') ? 'active' : '' %>" href="<%= locals.contextualNavUrls ? locals.contextualNavUrls.results : '/results' %>">
                                <i class="fas fa-trophy me-1"></i>Results
                                <% if (locals.newResultsCount > 0) { %>
                                    <span class="badge bg-success ms-1">New</span>
                                <% } %>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link <%= locals.currentUrl && locals.currentUrl.startsWith('/standings') ? 'active' : '' %>" href="<%= locals.contextualNavUrls ? locals.contextualNavUrls.standings : '/standings' %>">
                                <i class="fas fa-chart-bar me-1"></i>Standings
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link <%= locals.currentUrl && locals.currentUrl.includes('/chat') ? 'active' : '' %>" href="<%= locals.contextualNavUrls ? locals.contextualNavUrls.chat : '/chat' %>">
                                <i class="fas fa-comments me-1"></i>Chat
                                <% if (locals.unreadChatCount > 0) { %>
                                    <span class="badge bg-success ms-1"><%= locals.unreadChatCount %></span>
                                <% } %>
                            </a>
                        </li>
                    </ul>
                    
                    <ul class="navbar-nav">
                        <% if (user && user.role === 'admin') { %>
                            <li class="nav-item">
                                <a class="nav-link" href="/admin">
                                    <i class="fas fa-cog me-1"></i>Admin
                                </a>
                            </li>
                        <% } %>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <span class="badge bg-light text-dark rounded-circle me-1" style="width: 30px; height: 30px; display: inline-flex; align-items: center; justify-content: center; font-weight: bold;">
                                    <%= initials %>
                                </span>
                                <%= user ? user.username : 'User' %>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="/settings"><i class="fas fa-cog me-2"></i>Settings</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form method="POST" action="/auth/logout" class="m-0">
                                        <button type="submit" class="dropdown-item text-danger">
                                            <i class="fas fa-sign-out-alt me-2"></i>Logout
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        
        <!-- Mobile Navigation (Top Bar) -->
        <nav class="navbar navbar-dark bg-primary d-lg-none">
            <div class="container-fluid">
                <a class="navbar-brand" href="/dashboard">
                    <i class="fas fa-football-ball me-2"></i>NFL Pools
                </a>
                <!-- Mobile Profile Menu -->
                <div class="navbar-nav d-lg-none">
                    <div class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="mobileProfileDropdown" role="button" data-bs-toggle="dropdown">
                            <span class="badge bg-light text-dark rounded-circle me-1" style="width: 30px; height: 30px; display: inline-flex; align-items: center; justify-content: center;">
                                <%= initials %>
                            </span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="/settings"><i class="fas fa-cog me-2"></i>Settings</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><form method="POST" action="/auth/logout" class="m-0">
                                <button type="submit" class="dropdown-item text-danger">
                                    <i class="fas fa-sign-out-alt me-2"></i>Logout
                                </button>
                            </form></li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
        
        <!-- Mobile Bottom Navigation Bar -->
        <nav class="mobile-bottom-nav d-lg-none">
            <div class="container-fluid">
                <div class="row text-center">
                    <div class="col">
                        <a href="/dashboard" class="nav-link <%= locals.currentUrl === '/dashboard' ? 'active' : '' %>">
                            <i class="fas fa-home"></i>
                            <span>Home</span>
                        </a>
                    </div>
                    <div class="col">
                        <a href="<%= locals.contextualNavUrls ? locals.contextualNavUrls.picks : '/picks' %>" class="nav-link <%= locals.currentUrl && locals.currentUrl.startsWith('/picks') ? 'active' : '' %>">
                            <i class="fas fa-edit"></i>
                            <span>Picks</span>
                            <% if (locals.pendingPicksCount > 0) { %>
                                <span class="badge-dot bg-danger"></span>
                            <% } %>
                        </a>
                    </div>
                    <div class="col">
                        <a href="<%= locals.contextualNavUrls ? locals.contextualNavUrls.results : '/results' %>" class="nav-link <%= locals.currentUrl && locals.currentUrl.startsWith('/results') ? 'active' : '' %>">
                            <i class="fas fa-trophy"></i>
                            <span>Results</span>
                            <% if (locals.newResultsCount > 0) { %>
                                <span class="badge-dot bg-success"></span>
                            <% } %>
                        </a>
                    </div>
                    <div class="col">
                        <a href="<%= locals.contextualNavUrls ? locals.contextualNavUrls.standings : '/standings' %>" class="nav-link <%= locals.currentUrl && locals.currentUrl.startsWith('/standings') ? 'active' : '' %>">
                            <i class="fas fa-chart-bar"></i>
                            <span>Standings</span>
                        </a>
                    </div>
                    <div class="col">
                        <a href="<%= locals.contextualNavUrls ? locals.contextualNavUrls.chat : '/chat' %>" class="nav-link <%= locals.currentUrl && locals.currentUrl.includes('/chat') ? 'active' : '' %>">
                            <i class="fas fa-comments"></i>
                            <span>Chat</span>
                            <% if (locals.unreadChatCount > 0) { %>
                                <span class="badge-dot bg-success"></span>
                            <% } %>
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    <% } %>
    
    <!-- Flash Messages -->
    <% if (locals.messages && Object.keys(messages).length > 0) { %>
        <div class="container mt-3">
            <% Object.keys(messages).forEach(type => { %>
                <% messages[type].forEach(message => { %>
                    <div class="alert alert-<%= type === 'error' ? 'danger' : type %> alert-dismissible fade show" role="alert">
                        <% if (type === 'error') { %>
                            <i class="fas fa-exclamation-triangle me-2"></i>
                        <% } else if (type === 'success') { %>
                            <i class="fas fa-check-circle me-2"></i>
                        <% } else if (type === 'info') { %>
                            <i class="fas fa-info-circle me-2"></i>
                        <% } %>
                        <%= message %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% }) %>
            <% }) %>
        </div>
    <% } %>
    
    <!-- Breadcrumb Navigation -->
    <% if (locals.breadcrumbs && locals.breadcrumbs.length > 0) { %>
        <nav aria-label="breadcrumb" class="container mt-3">
            <ol class="breadcrumb">
                <% locals.breadcrumbs.forEach((crumb, index) => { %>
                    <li class="breadcrumb-item <%= index === locals.breadcrumbs.length - 1 ? 'active' : '' %>">
                        <% if (index < locals.breadcrumbs.length - 1) { %>
                            <a href="<%= crumb.url %>"><%= crumb.label %></a>
                        <% } else { %>
                            <%= crumb.label %>
                        <% } %>
                    </li>
                <% }) %>
            </ol>
        </nav>
    <% } %>
    
    <!-- Main Content -->
    <main class="<%= locals.mainClass || 'container my-4' %> <%= locals.isAuthenticated ? 'mb-mobile-nav' : '' %>">
        <%- body %>
    </main>
    
    <!-- Footer -->
    <footer class="bg-light mt-auto py-3">
        <div class="container text-center">
            <small class="text-muted">
                &copy; <%= currentYear %> NFL Confidence Pools Platform.
            </small>
        </div>
    </footer>
    
    <!-- Scripts -->
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Socket.io (if authenticated) -->
    <% if (locals.isAuthenticated) { %>
        <script src="/socket.io/socket.io.js"></script>
        <script src="/js/socket-client.js"></script>
    <% } %>
    
    <!-- Custom JS -->
    <script src="/js/main.js"></script>
    
    <!-- League Context Persistence -->
    <script>
        // Enhance main navigation links to preserve league context as fallback
        document.addEventListener('DOMContentLoaded', function() {
            // Check if contextual URLs were provided by the server
            const hasContextualUrls = <%= locals.contextualNavUrls ? 'true' : 'false' %>;
            
            console.log('DEBUG Client: Has contextual URLs:', hasContextualUrls);
            
            // TEMPORARY: Disable client-side league context entirely to test server-side contextual URLs
            if (false && !hasContextualUrls) {
                const selectedLeagueId = sessionStorage.getItem('selectedLeagueId');
                console.log('DEBUG Client: Selected league ID from storage:', selectedLeagueId);
                
                if (selectedLeagueId) {
                    // Update navigation links to include the selected league
                    const navLinks = document.querySelectorAll('a[href^="/picks"], a[href^="/results"], a[href^="/standings"]');
                    console.log('DEBUG Client: Found navigation links:', navLinks.length);
                    
                    navLinks.forEach(link => {
                        const href = link.getAttribute('href');
                        if (href && !href.includes('league_id=') && !href.includes('client_league_id=')) {
                            const separator = href.includes('?') ? '&' : '?';
                            const newHref = href + separator + 'client_league_id=' + selectedLeagueId;
                            link.setAttribute('href', newHref);
                            console.log('DEBUG Client: Updated link from', href, 'to', newHref);
                        }
                    });
                } else {
                    console.log('DEBUG Client: No selected league ID in session storage');
                }
            } else {
                console.log('DEBUG Client: Server provided contextual URLs, skipping client-side enhancement');
            }
        });
    </script>
    
    <!-- Connection Status Indicator -->
    <div id="connection-status" title="Connection Status"></div>
    <div id="offline-banner">You are currently offline. Some features may not work properly.</div>
    
    <%- script %>
</body>
</html>