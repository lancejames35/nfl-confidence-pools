<!-- League Chat Page Styles -->
<link rel="stylesheet" href="/css/chat.css">

<!-- League Switcher -->
<% if (locals.userLeagues && locals.userLeagues.length > 1) { %>
<div class="card mb-4">
    <div class="card-body py-2">
        <div class="d-flex align-items-center justify-content-between">
            <div>
                <i class="fas fa-users text-muted me-2"></i>
                <span class="text-muted">Switch League:</span>
            </div>
            <div class="dropdown">
                <button class="btn btn-outline-primary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                    <i class="fas fa-comments me-1"></i>
                    <%= league.league_name %>
                </button>
                <ul class="dropdown-menu dropdown-menu-end">
                    <% locals.userLeagues.forEach(userLeague => { %>
                        <li>
                            <a class="dropdown-item <%= userLeague.league_id === league.league_id ? 'active' : '' %>" 
                               href="/leagues/<%= userLeague.league_id %>/chat">
                                <i class="fas fa-<%= userLeague.is_commissioner ? 'crown' : 'user' %> me-2"></i>
                                <%= userLeague.league_name %>
                                <% if (userLeague.is_commissioner) { %>
                                    <small class="text-muted">(Commissioner)</small>
                                <% } %>
                            </a>
                        </li>
                    <% }) %>
                </ul>
            </div>
        </div>
    </div>
</div>
<% } %>

<div class="whatsapp-chat">
    <!-- WhatsApp-style Header -->
    <div class="whatsapp-header">
        <div class="header-left">
            <div class="league-avatar">
                <%= league.league_name.charAt(0).toUpperCase() %>
            </div>
            <div class="header-info">
                <div class="league-name"><%= league.league_name %></div>
                <div class="members-info"><%= onlineMembers %> online, <%= totalMembers %> members</div>
            </div>
        </div>
        <div class="header-actions">
            <button type="button" class="header-btn" data-bs-toggle="modal" data-bs-target="#newThreadModal" title="New Thread">
                <i class="fas fa-plus"></i>
            </button>
        </div>
    </div>

    <!-- Thread List -->
    <div class="whatsapp-conversations">
        <% if (chatThreads && chatThreads.length > 0) { %>
            <% chatThreads.forEach(thread => { %>
                <div class="conversation-item" data-thread-id="<%= thread.message_id %>">
                    <a href="/leagues/<%= league.league_id %>/chat/thread/<%= thread.message_id %>" class="conversation-link">
                        <div class="conversation-avatar">
                            <% if (thread.message_type === 'poll') { %>
                                <i class="fas fa-poll"></i>
                            <% } else { %>
                                <i class="fas fa-comments"></i>
                            <% } %>
                        </div>
                        <div class="conversation-content">
                            <div class="conversation-header">
                                <div class="conversation-title">
                                    <%= thread.thread_title || thread.message_text.substring(0, 40) + (thread.message_text.length > 40 ? '...' : '') %>
                                </div>
                                <div class="conversation-time">
                                    <%= thread.last_activity_formatted %>
                                </div>
                            </div>
                            <div class="conversation-preview">
                                <% if (thread.last_reply_text) { %>
                                    <strong><%= thread.last_reply_username %>:</strong> <%= thread.last_reply_text.substring(0, 50) + (thread.last_reply_text.length > 50 ? '...' : '') %>
                                <% } else { %>
                                    <strong><%= thread.username %>:</strong> <%= thread.message_text.substring(0, 50) + (thread.message_text.length > 50 ? '...' : '') %>
                                <% } %>
                            </div>
                            <div class="conversation-meta">
                                <span class="reply-count"><%= thread.reply_count %> replies</span>
                            </div>
                        </div>
                    </a>
                </div>
            <% }) %>
        <% } else { %>
            <div class="empty-conversations">
                <div class="empty-icon">
                    <i class="fas fa-comments"></i>
                </div>
                <div class="empty-text">
                    <h6>No conversations yet</h6>
                    <p>Start a new thread or create a poll to get the conversation going!</p>
                    <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#newThreadModal">
                        <i class="fas fa-plus me-2"></i>Start First Thread
                    </button>
                </div>
            </div>
        <% } %>
    </div>
</div>

<!-- New Thread Modal -->
<div class="modal fade" id="newThreadModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-plus-circle me-2"></i>Start New Thread
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="newThreadForm">
                    <div class="mb-4">
                        <label class="form-label">Thread Type</label>
                        <div class="row">
                            <div class="col-6">
                                <input type="radio" class="btn-check" name="threadType" id="threadTypeGeneral" value="general" checked>
                                <label class="btn btn-outline-primary w-100" for="threadTypeGeneral">
                                    <i class="fas fa-comments me-2"></i>General Thread
                                </label>
                            </div>
                            <div class="col-6">
                                <input type="radio" class="btn-check" name="threadType" id="threadTypePoll" value="poll">
                                <label class="btn btn-outline-primary w-100" for="threadTypePoll">
                                    <i class="fas fa-poll me-2"></i>Poll
                                </label>
                            </div>
                        </div>
                    </div>
                    
                    <!-- General Thread Fields -->
                    <div id="generalThreadFields">
                        <div class="mb-3">
                            <label for="threadTitle" class="form-label">Thread Title</label>
                            <input type="text" class="form-control" id="threadTitle" placeholder="Give your thread a descriptive title..." maxlength="200">
                            <div class="form-text">Optional - if left blank, we'll use the first part of your message</div>
                        </div>
                        <div class="mb-3">
                            <label for="threadMessage" class="form-label">Your Message</label>
                            <textarea class="form-control" id="threadMessage" rows="4" placeholder="What's on your mind?" maxlength="1000" required></textarea>
                            <div class="form-text">Maximum 1000 characters</div>
                        </div>
                    </div>
                    
                    <!-- Poll Fields (initially hidden) -->
                    <div id="pollThreadFields" style="display: none;">
                        <div class="mb-3">
                            <label for="pollQuestion" class="form-label">Poll Question</label>
                            <input type="text" class="form-control" id="pollQuestion" placeholder="What would you like to ask?" maxlength="200">
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Poll Options</label>
                            <div id="pollOptions">
                                <div class="poll-option-input mb-2">
                                    <input type="text" class="form-control poll-option" placeholder="Option 1" maxlength="100">
                                </div>
                                <div class="poll-option-input mb-2">
                                    <input type="text" class="form-control poll-option" placeholder="Option 2" maxlength="100">
                                </div>
                            </div>
                            <button type="button" class="btn btn-outline-secondary btn-sm" id="addPollOption">
                                <i class="fas fa-plus me-1"></i>Add Option
                            </button>
                            <small class="form-text text-muted">Maximum 4 options</small>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="pollType" class="form-label">Poll Type</label>
                                    <select class="form-select" id="pollType">
                                        <option value="single_choice">Single Choice</option>
                                        <option value="multiple_choice">Multiple Choice</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="pollExpires" class="form-label">Expires In (hours)</label>
                                    <select class="form-select" id="pollExpires">
                                        <option value="">Never</option>
                                        <option value="1">1 Hour</option>
                                        <option value="6">6 Hours</option>
                                        <option value="24">1 Day</option>
                                        <option value="72">3 Days</option>
                                        <option value="168">1 Week</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="postThreadBtn">
                    <i class="fas fa-paper-plane me-2"></i><span id="postThreadBtnText">Post Thread</span>
                </button>
            </div>
        </div>
    </div>
</div>


<!-- Chat JavaScript -->
<script>
    window.leagueId = <%= league.league_id %>;
</script>
<script src="/js/chat.js"></script>