<!-- League-Specific Navigation Bar -->
<% if (locals.currentLeague) { %>
<nav class="league-nav bg-light border-bottom">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center py-2">
            <div class="league-nav-title">
                <h6 class="mb-0">
                    <i class="fas fa-trophy text-primary me-2"></i>
                    <%= currentLeague.league_name %>
                </h6>
            </div>
            <ul class="nav nav-pills nav-sm">
                <li class="nav-item">
                    <a class="nav-link <%= locals.leagueSection === 'overview' ? 'active' : '' %>" 
                       href="/leagues/<%= currentLeague.league_id %>">
                        <i class="fas fa-home me-1"></i>Overview
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link <%= locals.leagueSection === 'picks' ? 'active' : '' %>" 
                       href="/picks/<%= currentLeague.league_id %>/<%= currentLeague.entry_id || 'new' %>">
                        <i class="fas fa-edit me-1"></i>Make Picks
                        <% if (locals.pendingPicksForLeague > 0) { %>
                            <span class="badge bg-danger ms-1"><%= pendingPicksForLeague %></span>
                        <% } %>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link <%= locals.leagueSection === 'results' ? 'active' : '' %>" 
                       href="/results/league/<%= currentLeague.league_id %>">
                        <i class="fas fa-chart-line me-1"></i>Results
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link <%= locals.leagueSection === 'standings' ? 'active' : '' %>" 
                       href="/standings?league_id=<%= currentLeague.league_id %>">
                        <i class="fas fa-list-ol me-1"></i>Standings
                    </a>
                </li>
                <% if (currentLeague.commissioner_id === user.user_id) { %>
                <li class="nav-item">
                    <a class="nav-link <%= locals.leagueSection === 'settings' ? 'active' : '' %>" 
                       href="/leagues/<%= currentLeague.league_id %>/edit">
                        <i class="fas fa-cog me-1"></i>Settings
                    </a>
                </li>
                <% } %>
            </ul>
        </div>
    </div>
</nav>

<style>
.league-nav {
    background: #f8f9fa;
    border-bottom: 2px solid #dee2e6;
    position: sticky;
    top: 56px;
    z-index: 1020;
}

.league-nav-title h6 {
    font-weight: 600;
    color: #2d3748;
}

.nav-pills .nav-link {
    color: #6c757d;
    padding: 0.375rem 0.75rem;
    border-radius: 20px;
    font-size: 0.875rem;
    transition: all 0.2s ease;
}

.nav-pills .nav-link:hover {
    background: rgba(0, 123, 255, 0.1);
    color: var(--primary-color);
}

.nav-pills .nav-link.active {
    background: var(--primary-color);
    color: white;
}

.nav-pills .nav-link .badge {
    font-size: 0.65rem;
    padding: 2px 5px;
}

@media (max-width: 768px) {
    .league-nav {
        overflow-x: auto;
    }
    
    .league-nav .nav {
        flex-wrap: nowrap;
        white-space: nowrap;
    }
    
    .league-nav-title {
        display: none;
    }
}
</style>
<% } %>