<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1><i class="fas fa-history me-2"></i>Pick History</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/picks">My Picks</a></li>
                        <li class="breadcrumb-item active" aria-current="page">History</li>
                    </ol>
                </nav>
            </div>
            <div>
                <a href="/picks" class="btn btn-primary">
                    <i class="fas fa-arrow-left me-2"></i>Back to Picks
                </a>
            </div>
        </div>

        <% if (picksByWeek && Object.keys(picksByWeek).length > 0) { %>
            <div class="row">
                <!-- Weeks Overview -->
                <div class="col-lg-3">
                    <div class="card sticky-top" style="top: 20px;">
                        <div class="card-header">
                            <h6 class="mb-0">
                                <i class="fas fa-calendar-alt me-2"></i>Weeks
                            </h6>
                        </div>
                        <div class="card-body p-0">
                            <div class="list-group list-group-flush">
                                <% 
                                let totalPoints = 0;
                                let totalCorrect = 0;
                                let totalPicks = 0;
                                
                                Object.keys(picksByWeek).sort((a, b) => parseInt(b) - parseInt(a)).forEach(week => {
                                    const weekPicks = picksByWeek[week];
                                    const weekPoints = weekPicks.reduce((sum, pick) => sum + (pick.points_earned || 0), 0);
                                    const weekCorrect = weekPicks.filter(pick => pick.is_correct === 1).length;
                                    
                                    totalPoints += weekPoints;
                                    totalCorrect += weekCorrect;
                                    totalPicks += weekPicks.length;
                                %>
                                    <a href="#week-<%= week %>" class="list-group-item list-group-item-action">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <strong>Week <%= week %></strong>
                                                <div class="small text-muted">
                                                    <%= weekCorrect %>/<%= weekPicks.length %> correct
                                                </div>
                                            </div>
                                            <div class="text-end">
                                                <div class="badge bg-<%= weekPoints > 0 ? 'success' : 'secondary' %>">
                                                    <%= weekPoints %> pts
                                                </div>
                                            </div>
                                        </div>
                                    </a>
                                <% }) %>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="text-center">
                                <div class="fw-bold text-primary"><%= totalPoints %> Total Points</div>
                                <div class="small text-muted">
                                    <%= totalCorrect %>/<%= totalPicks %> 
                                    (<%= totalPicks > 0 ? Math.round(totalCorrect / totalPicks * 100) : 0 %>%)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Weekly Details -->
                <div class="col-lg-9">
                    <% Object.keys(picksByWeek).sort((a, b) => parseInt(b) - parseInt(a)).forEach(week => { %>
                        <div class="card mb-4" id="week-<%= week %>">
                            <div class="card-header">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h5 class="mb-0">
                                        <i class="fas fa-football me-2"></i>Week <%= week %>
                                    </h5>
                                    <div>
                                        <% 
                                        const weekPicks = picksByWeek[week];
                                        const weekPoints = weekPicks.reduce((sum, pick) => sum + (pick.points_earned || 0), 0);
                                        const weekCorrect = weekPicks.filter(pick => pick.is_correct === 1).length;
                                        %>
                                        <span class="badge bg-<%= weekPoints > 0 ? 'success' : 'secondary' %> me-2">
                                            <%= weekPoints %> points
                                        </span>
                                        <span class="badge bg-info">
                                            <%= weekCorrect %>/<%= weekPicks.length %> correct
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body p-0">
                                <div class="table-responsive">
                                    <table class="table table-hover mb-0">
                                        <thead class="table-light">
                                            <tr>
                                                <th width="10%">Conf.</th>
                                                <th width="35%">Matchup</th>
                                                <th width="20%">Pick</th>
                                                <th width="20%">Result</th>
                                                <th width="15%" class="text-center">Points</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% weekPicks.sort((a, b) => b.confidence_points - a.confidence_points).forEach(pick => { %>
                                                <tr class="<%= pick.is_correct === 1 ? 'table-success' : pick.is_correct === 0 ? 'table-danger' : '' %>">
                                                    <td>
                                                        <div class="confidence-mini">
                                                            <%= pick.confidence_points %>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="matchup-info">
                                                            <div class="fw-bold">
                                                                <%= pick.away_team %> @ <%= pick.home_team %>
                                                            </div>
                                                            <% if (pick.home_score !== null && pick.away_score !== null) { %>
                                                                <div class="small text-muted">
                                                                    Final: <%= pick.away_team %> <%= pick.away_score %>, <%= pick.home_team %> <%= pick.home_score %>
                                                                </div>
                                                            <% } %>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <% if (pick.selected_team) { %>
                                                            <span class="badge bg-primary">
                                                                <%= pick.selected_team %>
                                                            </span>
                                                        <% } else { %>
                                                            <span class="text-muted">No pick</span>
                                                        <% } %>
                                                    </td>
                                                    <td>
                                                        <% if (pick.winning_team) { %>
                                                            <div class="result-info">
                                                                <div class="winner">
                                                                    <i class="fas fa-trophy text-warning me-1"></i>
                                                                    <%= pick.winning_team %>
                                                                </div>
                                                                <% if (pick.is_correct === 1) { %>
                                                                    <div class="small text-success">
                                                                        <i class="fas fa-check me-1"></i>Correct
                                                                    </div>
                                                                <% } else if (pick.is_correct === 0) { %>
                                                                    <div class="small text-danger">
                                                                        <i class="fas fa-times me-1"></i>Wrong
                                                                    </div>
                                                                <% } %>
                                                            </div>
                                                        <% } else { %>
                                                            <span class="text-muted">
                                                                <i class="fas fa-clock me-1"></i>Pending
                                                            </span>
                                                        <% } %>
                                                    </td>
                                                    <td class="text-center">
                                                        <% if (pick.points_earned > 0) { %>
                                                            <span class="fw-bold text-success">
                                                                +<%= pick.points_earned %>
                                                            </span>
                                                        <% } else if (pick.is_correct === 0) { %>
                                                            <span class="fw-bold text-danger">0</span>
                                                        <% } else { %>
                                                            <span class="text-muted">-</span>
                                                        <% } %>
                                                    </td>
                                                </tr>
                                            <% }) %>
                                        </tbody>
                                        <tfoot class="table-light">
                                            <tr>
                                                <td colspan="4" class="fw-bold">Week Total:</td>
                                                <td class="text-center fw-bold text-<%= weekPoints > 0 ? 'success' : 'secondary' %>">
                                                    <%= weekPoints %> pts
                                                </td>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        <% } else { %>
            <div class="text-center py-5">
                <i class="fas fa-clipboard-list fa-4x text-muted mb-4"></i>
                <h3 class="text-muted mb-3">No Pick History Yet</h3>
                <p class="text-muted mb-4">
                    You haven't made any picks yet. Join a league and start making picks to see your history here.
                </p>
                <div class="d-flex justify-content-center gap-3">
                    <a href="/leagues/join" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Join League
                    </a>
                    <a href="/leagues/create" class="btn btn-outline-primary">
                        <i class="fas fa-trophy me-2"></i>Create League
                    </a>
                </div>
            </div>
        <% } %>
    </div>
</div>

<style>
.confidence-mini {
    width: 30px;
    height: 30px;
    border-radius: 50%;
    background: linear-gradient(135deg, #007bff, #0056b3);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    font-size: 0.85rem;
}

.matchup-info {
    line-height: 1.3;
}

.result-info {
    line-height: 1.3;
}

.winner {
    font-weight: 600;
}

.list-group-item-action:hover {
    background-color: #f8f9fa;
}

.table-responsive {
    border-radius: 0;
}

.table th {
    border-top: none;
    font-weight: 600;
    font-size: 0.875rem;
}

.table td {
    vertical-align: middle;
    border-color: #e9ecef;
}

.table-success {
    --bs-table-accent-bg: rgba(25, 135, 84, 0.1);
    border-color: rgba(25, 135, 84, 0.2);
}

.table-danger {
    --bs-table-accent-bg: rgba(220, 53, 69, 0.1);
    border-color: rgba(220, 53, 69, 0.2);
}

@media (max-width: 768px) {
    .table-responsive {
        font-size: 0.875rem;
    }
    
    .confidence-mini {
        width: 25px;
        height: 25px;
        font-size: 0.75rem;
    }
    
    .matchup-info,
    .result-info {
        font-size: 0.85rem;
    }
}

/* Smooth scrolling for anchor links */
html {
    scroll-behavior: smooth;
}

/* Highlight target section */
.card:target {
    box-shadow: 0 0 20px rgba(0, 123, 255, 0.3);
    transform: scale(1.02);
    transition: all 0.3s ease;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Smooth scroll and highlight for week navigation
    document.querySelectorAll('a[href^="#week-"]').forEach(link => {
        link.addEventListener('click', function(e) {
            e.preventDefault();
            const targetId = this.getAttribute('href').substring(1);
            const targetElement = document.getElementById(targetId);
            
            if (targetElement) {
                targetElement.scrollIntoView({
                    behavior: 'smooth',
                    block: 'start'
                });
                
                // Add temporary highlight
                targetElement.style.boxShadow = '0 0 20px rgba(0, 123, 255, 0.3)';
                targetElement.style.transform = 'scale(1.02)';
                
                setTimeout(() => {
                    targetElement.style.boxShadow = '';
                    targetElement.style.transform = '';
                }, 2000);
            }
        });
    });
});
</script>