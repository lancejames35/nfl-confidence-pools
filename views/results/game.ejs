<script>
function filterPicks(filter) {
    const rows = document.querySelectorAll('.pick-row');
    
    rows.forEach(row => {
        const result = row.dataset.result;
        
        if (filter === 'all') {
            row.style.display = '';
        } else if (filter === 'correct' && result === 'correct') {
            row.style.display = '';
        } else if (filter === 'incorrect' && result === 'incorrect') {
            row.style.display = '';
        } else {
            row.style.display = 'none';
        }
    });
}

function shareGame() {
    const title = '<%= game.away_team %> @ <%= game.home_team %> - Game Results';
    const text = 'Check out the results for <%= game.away_team %> @ <%= game.home_team %>!';
    
    if (navigator.share) {
        navigator.share({
            title: title,
            text: text,
            url: window.location.href
        });
    } else {
        // Fallback: copy to clipboard
        navigator.clipboard.writeText(window.location.href).then(() => {
            alert('Link copied to clipboard!');
        });
    }
}

